{
  "service": "canary-deployments-test",
  "functions": {
    "hello": {
      "handler": "handler.hello",
      "events": [{ "http": "GET hello" }],
      "deploymentSettings": {
        "type": "Linear10PercentEvery1Minute",
        "alias": "Live",
        "canaryAlarms": [
          {
            "metric": "Duration",
            "threshold": 5000,
            "comparisonOperator": "GreaterThanThreshold",
            "statistic": "Average"
          }
        ]
      }
    }
  }
}
